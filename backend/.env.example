# Configuração do Banco de Dados PostgreSQL
DB_USER=postgres
DB_HOST=localhost
DB_NAME=academia
DB_PASSWORD=postgres
DB_PORT=5432

# Segurança JWT (OBRIGATÓRIO EM PRODUÇÃO)
# Gere uma chave forte: openssl rand -base64 32
JWT_SECRET=seu_segredo_jwt_aqui_use_valor_forte_em_producao

# Configuração do Servidor
PORT=3001
NODE_ENV=development

# CORS - Origens permitidas (separadas por vírgula)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Configuração de Email (Opção 1: Serviço)
EMAIL_SERVICE=gmail
EMAIL_USER=seu_email@gmail.com
EMAIL_PASS=sua_senha_app
EMAIL_FROM=noreply@academia.com

